<%- include('../includes/header_admin') %>

<h1>Painel do administrador</h1>

<section class="add-categ">
	<div class="container">
		<h1>É necessário fazer o login</h1>

		<%- include('../includes/messages') %>
		<div class="card card-login">
			<div class="card-inner">
				<form action="/blog/admin/login" method="POST">
					<%- include('../includes/csrf') %>
					<label for="name">Nome de usuário: </label>
					<input type="text" name="name" placeholder="Nome de usuário" required>
					<br>
					<label for="password">Senha: </label>
					<input type="password" name="password" placeholder="Sua senha" required>
					<button type="submit" class="btn-send">Entrar</button>
				</form>
			</div>
		</div>

	</div>
</section>

